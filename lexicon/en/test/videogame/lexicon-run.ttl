@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base   <http://localhost:8080#> .

:lexicon_en
    a              lemon:Lexicon ;
    lemon:language "en" ;
    lemon:entry    :to_run ;
    lemon:entry    :on .

:to_run
    a                    lemon:LexicalEntry ;
    lexinfo:partOfSpeech lexinfo:verb ;
    lemon:canonicalForm  :form_run ;
    lemon:otherForm      :form_runs ;
    lemon:otherForm      :form_run ;
    lemon:synBehavior    :run_frame_transitive, :run_frame_intransitive ;
    lemon:sense          :run_ontomap .

:form_run
    a                    lemon:Form ;
    lemon:writtenRep     "run"@en ;
    lexinfo:verbFormMood lexinfo:infinitive .

:form_runs
    a                lemon:Form ;
    lemon:writtenRep "runs"@en ;
    lexinfo:tense    lexinfo:present ;
    lexinfo:number   lexinfo:singular ;
    lexinfo:person   lexinfo:secondPerson .

:form_run
    a                lemon:Form ;
    lemon:writtenRep "run"@en ;
    lexinfo:tense    lexinfo:past .


:run_frame_intransitive
    a                            lexinfo:IntransitivePPFrame ;
    lexinfo:subject              :run_subj ;
    lexinfo:prepositionalAdjunct :run_obj .

:run_frame_transitive
    a                            lexinfo:TransitivePPFrame ;
    lexinfo:subject              :run_subj ;
    lexinfo:prepositionalAdjunct :run_obj .

:run_ontomap
    a                 lemon:OntoMap, lemon:LexicalSense ;
    lemon:ontoMapping :run_ontomap ;
    lemon:reference   <https://dbpedia.org/ontology/computingPlatform> ;
    lemon:subjOfProp  :run_obj ;
    lemon:objOfProp   :run_subj ;
    lemon:condition   :run_condition .

:run_condition
    a                    lemon:condition ;
    lemon:propertyDomain <https://dbpedia.org/ontology/Software> ;
    lemon:propertyRange  <https://dbpedia.org/ontology/computingPlatform> .

:run_obj
    lemon:marker :on .

## Prepositions ##

:on
    a                    lemon:SynRoleMarker ;
    lemon:canonicalForm  [ lemon:writtenRep "on"@en ] ;
    lexinfo:partOfSpeech lexinfo:preposition .
