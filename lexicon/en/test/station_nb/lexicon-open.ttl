@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base   <http://localhost:8080#> .

:lexicon_en
    a              lemon:Lexicon ;
    lemon:language "en" ;
    lemon:entry    :to_open ;
    lemon:entry    :by .

:to_open
    a                    lemon:LexicalEntry ;
    lexinfo:partOfSpeech lexinfo:verb ;
    lemon:canonicalForm  :form_open ;
    lemon:otherForm      :form_opens ;
    lemon:otherForm      :form_opened ;
    lemon:synBehavior    :open_frame_transitive, :open_frame_intransitive ;
    lemon:sense          :open_ontomap .

:form_open
    a                    lemon:Form ;
    lemon:writtenRep     "open"@en ;
    lexinfo:verbFormMood lexinfo:infinitive .

:form_opens
    a                lemon:Form ;
    lemon:writtenRep "opens"@en ;
    lexinfo:tense    lexinfo:present ;
    lexinfo:number   lexinfo:singular ;
    lexinfo:person   lexinfo:secondPerson .

:form_opened
    a                lemon:Form ;
    lemon:writtenRep "opened"@en ;
    lexinfo:tense    lexinfo:past .


:open_frame_intransitive
    a                            lexinfo:IntransitivePPFrame ;
    lexinfo:subject              :open_subj ;
    lexinfo:prepositionalAdjunct :open_obj .

:open_frame_transitive
    a                            lexinfo:TransitivePPFrame ;
    lexinfo:subject              :open_subj ;
    lexinfo:prepositionalAdjunct :open_obj .

:open_ontomap
    a                 lemon:OntoMap, lemon:LexicalSense ;
    lemon:ontoMapping :open_ontomap ;
    lemon:reference   <https://dbpedia.org/ontology/openingYear> ;
    lemon:subjOfProp  :open_obj ;
    lemon:objOfProp   :open_subj ;
    lemon:condition   :open_condition .

:open_condition
    a                    lemon:condition ;
    lemon:propertyDomain <https://dbpedia.org/ontology/Station> ;
    lemon:propertyRange  <https://www.w3.org/2001/XMLSchema#gYear> .

:open_obj
    lemon:marker :by .

## Prepositions ##

:by
    a                    lemon:SynRoleMarker ;
    lemon:canonicalForm  [ lemon:writtenRep "by"@en ] ;
    lexinfo:partOfSpeech lexinfo:preposition .
